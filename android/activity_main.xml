<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/txtGuess"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="40dp"
            android:text="@string/guessing_game"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txtGuess2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/enter_a_number_between_1_and_100" />

        <EditText
            android:id="@+id/editGuess"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="number"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/btnGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:baselineAligned="false"
            android:text="@string/guess" />

        <TextView
            android:id="@+id/txtGuess3"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:text="@string/enter_a_number_then_click_guess" />


    </LinearLayout>

</RelativeLayout>